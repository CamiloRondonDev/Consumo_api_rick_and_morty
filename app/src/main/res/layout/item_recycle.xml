<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="390dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:orientation="vertical"
    android:layout_height="280dp">


    <ImageView
        android:background="@drawable/fondos_textview"
        android:id="@+id/imageRecycle"
        android:layout_width="115dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />

    <TextView
        android:paddingStart="10dp"
        android:background="@drawable/fondos_textview"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:id="@+id/nameRecycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingStart="10dp"
        android:background="@drawable/fondos_textview"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="center"
        android:id="@+id/statusRecycle"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingStart="10dp"
        android:background="@drawable/fondos_textview"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/speciesRecycle"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingStart="10dp"
        android:background="@drawable/fondos_textview"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/black"
        android:id="@+id/typeRecycle"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:paddingStart="10dp"
        android:background="@drawable/fondos_textview"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/genderRecycle"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:paddingStart="10dp"
        android:background="@drawable/fondos_textview"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/createdRecycle"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="wrap_content"
        android:background="#37FF00"
        android:layout_height="2dp">

    </View>


</LinearLayout>